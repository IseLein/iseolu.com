---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import EssayCards from "../../components/EssayCards.astro";

export async function getStaticPaths() {
    const allPosts = await getCollection("blog");
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post) =>
            post.data.tags.includes(tag)
        );
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

const tagDescriptions = await getCollection("tags");

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={`${tag} | iseolu dot com`}>
    <div class="tag-title">#{tag}</div>
    <div class="description">{tagDescriptions.find(desc => desc.id === tag)?.data.description}</div>
    <EssayCards essays={posts} />
</BaseLayout>

<style>
.tag-title {
    text-align: right;
    padding-top: 0.5em;
    padding-bottom: 0.2em;
    margin-bottom: 0.2em;
    font-size: 2em;
    border-bottom: 1px solid;
}
.description {
    font-size: x-large;
    text-align: right;
    margin-bottom: 1em;
}
</style>
